{
  "name": "wifi-topology-viewer",
  "version": "0.1.0",
  "private": false,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c green,cyan \"npm run dev --workspace backend\" \"npm run dev --workspace frontend\"",
    "kill": "node scripts/kill.mjs",
    "stop": "npm run kill",
    "start": "node backend/src/server.js",
    "build": "npm --prefix frontend run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "bin": {
    "wifi-topology-viewer": "bin/wifi-topology-viewer.js"
  },
  "license": "MIT",
  "files": [
    "bin/",
    "backend/",
    "frontend/dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ml-matrix": "^6.12.0",
    "ws": "^8.18.0"
  }
}
